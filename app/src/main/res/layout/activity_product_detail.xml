<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.minimarket.activity.ProductDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">


        <ImageView
                android:id="@+id/imageView_product_detail_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:transitionName="productImage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@id/constraintLayout_product_detail_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_product_detail_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/textView_product_detail_name" />


        <ImageButton
                android:id="@+id/imageButton_back_product_detail"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="18dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_left_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.button.MaterialButton
                android:id="@+id/button_buy_product_detail"
                style="@style/CartButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="24dp"
                app:cornerRadius="4dp"
                app:icon="@drawable/ic_add_shopping_cart_30"
                app:layout_constraintBottom_toBottomOf="@id/textView_product_detail_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textView_product_detail_name" />


        <TextView
                android:id="@+id/textView_product_detail_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="120dp"
                android:text="@{viewModel.productViewEntity.name}"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.80"
                tools:text="VESTIDO TRANSPASSE BOW" />

        <TextView
                android:id="@+id/textView_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.productViewEntity.actualPrice}"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/textView_product_detail_name"
                app:layout_constraintTop_toBottomOf="@id/textView_product_detail_name"
                tools:text="R$ 240.90" />


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_size_product"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/textView_product_price"
                app:layout_constraintTop_toBottomOf="@id/textView_product_price"
                tools:itemCount="1"
                tools:listitem="@layout/size_item" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
